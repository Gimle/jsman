<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../../../template/methodWrapper.xsl"?>
<method name="clearInterval" parent="window">
	<lead>
		<p>clearInterval â€” Clears a previously <xref href="manual/5. Extensions/DOM/Timers/3. setInterval/setInterval.xml">setInterval</xref>.</p>
	</lead>
	<description>
		<p>clearInterval(<params/>)</p>
	</description>
	<parameters>
		<parameter name="id" type="timeout" optional="false">The id of the setInterval.</parameter>
	</parameters>
	<examples>
		<example>
			<heading>clearInterval example</heading>
			<code>
				var timeout = setInterval(function () {
					console.log('Recursivle executes until cleared.');
				}, 200);

				setTimeout(function () {
					console.log('Clearing recursive timeout.');
					clearInterval(timeout);
				}, 1500);
			</code>
		</example>
		<see-also>
			<ul>
				<li><xref href="manual/5. Extensions/DOM/Timers/3. setInterval/setInterval.xml">setInterval</xref></li>
			</ul>
		</see-also>
		<external>
			<mdn href="https://developer.mozilla.org/docs/Web/API/WindowOrWorkerGlobalScope/clearInterval">clearInterval</mdn>
		</external>
	</examples>
</method>
