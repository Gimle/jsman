<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../template/operatorWrapper.xsl"?>
<statement name="while">
	<lead>
		<p>while</p>
	</lead>
	<description>
		<p>while (<params/>)</p>
	</description>
	<parameters>
		<parameter name="condition" type="mixed" optional="false"></parameter>
	</parameters>
	<examples>
		<example>
			<heading>while example</heading>
			<code>
				var i = 1;
				while (i &lt;= 5) {
					console.log('Iteration round: ' + i++);
				}
			</code>
		</example>
	</examples>
	<external>
		<mdn href="https://developer.mozilla.org/docs/Web/JavaScript/Reference/Statements/while">while statement</mdn>
	</external>
</statement>
